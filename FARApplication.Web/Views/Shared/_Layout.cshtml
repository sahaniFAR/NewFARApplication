@using Microsoft.AspNetCore.Http
@using  FARApplication.Web.Utility
@inject IHttpContextAccessor HttpContextAccessor
@{
    var SessionUSer = HttpContextAccessor.HttpContext.Session.getObjectAsJson<User>("UserDetails");
   
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FARApplication.Web</title>
    <link href="~/asset/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/asset/sidebar/css/sidebars.css" rel="stylesheet">
    <link href="~/asset/toastr/css/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />
  

</head>
<body>
    @{
        var Mode = ViewBag.Mode;
       
    }

    <header>
        <partial name="_HeaderPartial" />
    </header>

    <div class="container">

       


        <main role="main" class="pb-3">
            <div class="collapse show" id="Request-collapse" style="">
               
               @* <footer class="border-top footer text-muted d-flex justify-content-end">*@
                   
            </div>

            <div class="flex-shrink-0 p-3 bg-white" style="width: 280px;">

                <ul class="list-unstyled ps-0">
                    <li><a href="@Url.Action("Index", "Far")" class="btn btn-toggle align-items-center rounded">New FAR Request</a></li>

                    <li class="border-top my-3"></li>
                    <li class="mb-1">
                        <button class="btn btn-toggle align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#Request-collapse" aria-expanded="true">
                            View Requests
                        </button>
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li><a href="#statusModal" class="link-dark rounded" data-toggle="modal" data-target="#statusModal">By Status</a></li>
                           @* <li><a href="#" class="link-dark rounded">By FAR ID</a></li>*@
                            @if (Mode == "Admin")
                            {
                                <li><a href="#" class="link-dark rounded" data-toggle="" data-target="">By Submitter</a></li>
                            }
                           
                           @* <li><a href="#" class="link-dark rounded">By Next Approver</a></li>*@
                        </ul>
                      
                    </li>


                    @if ((int)SessionUSer.ApprovalLevel>0 )
                    {
                        <li class="border-top my-3"></li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded " data-bs-toggle="collapse" data-bs-target="#Administration-collapse" aria-expanded="true">
                                Administration
                            </button>
                            <div class="collapse show" id="Administration-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="@Url.Action("ConfigurationProfile", "Administration")" class="link-dark rounded">Configuration Profile</a></li>
                                    @*<li><a href="#" class="link-dark rounded">Replication Conflicts</a></li>
                        <li><a href="#" class="link-dark rounded">Trash</a></li>*@

                                </ul>
                            </div>
                        </li>

                    }

                    </ul>
            </div>

            @RenderBody()

        </main>
    </div>
    
    <div>
       
        <partial name="_FooterPartial" />
   @* </footer>*@
    </div>

    @*<footer class="border-top footer text-muted d-flex justify-content-end">
            <div class="container">
                &copy; 2022 - FARApplication.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    @*<script src="~/js/site.js" asp-append-version="true"></script>*@



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/asset/toastr/js/toastr.js"></script>
    <script src="~/asset/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/asset/sidebar/js/sidebars.js"></script>
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>
