@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
            <img class="ibmimg" style="width:120px" src="~/asset/images/IBM-Emblem.png">
        </div>
        <div class="col-lg-4">
            <h2 class="heading"><b>FAR Requests Application</b></h2>
        </div>
        <div class="col-lg-4 d-flex justify-content-center">
            <button class="btn-outline-dark" style="margin-top:17px;" type="button" onclick="@("window.location.href='" + @Url.Action("Logout", "Home") + "'");"> Logout</button>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
            <p class="logged-in-user"><b>Welcome </b><span> @HttpContextAccessor.HttpContext.Session.GetString("UserEmail")</span></p>
        </div>
        <div class="col-lg-4">
            <div class="far-reqest-date" id="currentdate"></div>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <hr style="height:3px;margin-top: -4px;border:none;color:grey;background-color:#333;" />
</div>

