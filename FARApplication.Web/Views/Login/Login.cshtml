@model LoginViewModel 

@{
    Layout = "";
}

<!doctype html>
<html lang="en">
<head>

    <link href="~/asset/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="~/asset/toastr/css/toastr.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/asset/toastr/js/toastr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
</head>
<body style="background-color: #1b1b1b;">

    <section class="vh-100" style="background-color: #1b1b1b;">
        <div class="container py-5 h-100">


            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10 d-flex justify-content-center">
                    <div class="card" style="border-radius: 1rem; width:55%;">
                        <div class="row g-0">

                            <div class="col-md-12 col-lg-12 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Login" autocomplete="off">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> -->
                                            <div class="ibmimg">
                                                <img src="~/asset/images/IBM-Emblem.png" style="width:120px" alt="Responsive image">
                                            </div>

                                        </div>
                                        <p>
                                            <span class="h4  mb-0" style="color:red;">FAR Requests Application</span>
                                        </p>
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div class="form-outline mb-4">

                                            <input type="text" asp-for="EmailID" id="txtUserName" class="form-control form-control-lg" placeholder="">
                                            <label class="form-label">Email ID</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" asp-for="PassWord" id="txtPassWord" class="form-control form-control-lg" placeholder="" />
                                            <label class="form-label">Password</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button id="btnLogin" class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>

                                        <a class="small text-muted" href="#forgetPaswordModal" data-toggle="modal" data-target="#forgetPaswordModal">Forgot password?</a>
                                        @*<p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="#!"
                                            style="color: #393f81;">Register here</a></p>*@
                                        <!-- <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a> -->
                                        <div class="modal fade" id="forgetPaswordModal" tabindex="-1" role="dialog" aria-labelledby="forgetPaswordModal" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="forgetPaswordModal">Forget Password</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div>
                                                            <br />
                                                            <br />
                                                            <dl class="row">

                                                                <dd class="col-sm-8">
                                                                    <div class="form-outline mb-4">

                                                                        <input type="text" id="txtUserEmail" name="txtUserEmail" class="form-control form-control-lg" placeholder="">
                                                                        <label class="form-label">Email ID</label>
                                                                    </div>

                                                                    <div class="form-outline mb-4">
                                                                        <input type="password" id="txtUserPassWord" name="txtUserPassWord" class="form-control form-control-lg" placeholder="" />
                                                                        <label class="form-label">Password</label>
                                                                    </div>
                                                                    <div id="Message"></div>

                                                                </dd>
                                                            </dl>
                                                        </div>

                                                    </div>
                                                    <div id='wait' name='wait' style='position:absolute;top:-9999px;left:-9999px;background-color:rgba(0,0,0,0.3);'>
                                                        <table border='0' cellspacing='0' cellpadding='0' style='width:100%;height:100%;'>
                                                            <tbody>
                                                                <tr><td style='width:100%;height:50%;'> </td></tr>
                                                                <tr><td align='center'><img id='cursor' name='cursor' src="~/asset/images/wait.gif"></td></tr>
                                                            </tbody>
                                                         </table>
                                                      </div>
                                                    <div id="processDiv" style="display:none">Processing.....</div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary" id="btnforgetpassword">Save</button>
                                                    </div>
                                                    

                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

          
        </div>
    </section>
    
     
    

    <script src="~/asset/bootstrap/js/bootstrap.bundle.min.js"></script>

    @*<script src="~/asset/sidebar/js/sidebars.js"></script>*@


    <script type="text/javascript">
        $(function () {


            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-center",
                "onclick": null,

                "showMethod": "show",
                "hideMethod": "fadeOut",
                "timeOut": 0,
                "extendedTimeOut": 0
            }

            $("#btnLogin").click(function () {

                var objLogin = {};

                objLogin.UserName = $.trim($('#txtUserName').val());
                objLogin.PassWord = $.trim($("#txtPassWord").val());

                if (objLogin.UserName == "") {
                    toastr.error("Email ID can not be blank", 'Warning');
                    return false;
                }


                var stremail = ($.trim($('#txtUserName').val()) + "").toLowerCase();

                var mailformat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;

                if (objLogin.UserName.match(mailformat)) {

                    if (stremail.indexOf('ibm.') < 0) {

                        toastr.error("This is not a IBM Email ID", 'Warning');
                        $("#txtUserName").focus();
                        return false;
                    }


                }
                else {

                    toastr.error("You have entered an invalid Email ID!", 'Warning');
                    $("#txtUserName").focus();
                    return false;
                }
                if (objLogin.PassWord == "") {
                    toastr.error("Password can not be blank", 'Warning');
                    return false;
                }

            });

        });

        $("#btnforgetpassword").click(function(){
            var objUser = {};

                objUser.UserName = $.trim($('#txtUserEmail').val());
                objUser.PassWord = $.trim($("#txtUserPassWord").val());

                if (objUser.UserName == "") {
                    toastr.error("Email ID can not be blank", 'Warning');
                    return false;
                }


                var stremail = ($.trim($('#txtUserEmail').val()) + "").toLowerCase();

                var mailformat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;

                if (objUser.UserName.match(mailformat)) {

                    if (stremail.indexOf('ibm.') < 0) {

                        toastr.error("This is not a IBM Email ID", 'Warning');
                        $("#txtUserEmail").focus();
                        return false;
                    }


                }
                else {

                    toastr.error("You have entered an invalid Email ID!", 'Warning');
                    $("#txtUserEmail").focus();
                    return false;
                }
                if (objUser.PassWord == "") {
                    toastr.error("Password can not be blank", 'Warning');
                    return false;
                }

            var data = {
            emailId: $("#txtUserEmail").val(),
            password: $("#txtUserPassWord").val(),
                       }

            var request = $.ajax({
                                     type: "GET",
                                     beforeSend: function(){
                                                $('#wait').css({
                                                    'top': '0px',
                                                    'left': '0px',
                                                    'width': '100%',
                                                    'height': '100%'
                                                });
                                     },
                                    
                                     url: "http://localhost:5000/api/User/UpdateUserPassword",
                                      //"https://farapplicationservice.azurewebsites.net/api/User/UpdateUserPassword",
                                          
                                     headers: {
                                                 'Access-Control-Allow-Origin': '*',
                                                 'Content-Type': 'application/x-www-form-urlencoded'
                                               },
                                     data: data,
                                     dataType: "json",
                                     contentType: "application/json; charset=utf-8",
                                     complete: function(){
                                                $('#wait').css({
                                                    'top': '-999px',
                                                    'left': '-999px',
                                                    'width': '0%',
                                                    'height': '0%'
                                                });

                                     },
                                     success: function (result) {
                                              $("#Message").append("<span color:green>Password changed successfully!!</span>");
                   
                                                               },
                                     error: function () {
                                            $("#processDiv").hide();
                                            $("#Message").append("<span 'color:red'>There is an issue to change the password!!</span>");

                               }


                            });
           

        });

    </script>


    @if (ViewData["MSGSuc"] != null)
    {
        <script type="text/javascript">
       
        window.onload = function () {

                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "positionClass": "toast-top-center",
                    "onclick": null,

                    "showMethod": "show",
                    "hideMethod": "fadeOut",
                    "timeOut": 0,
                    "extendedTimeOut": 0
                }
                toastr.success("@ViewData["MSGSuc"]", 'Success');
            
        }
        </script>
    }

    @if (ViewData["MSGErr"] != null)
    {
        <script type="text/javascript">

        window.onload = function () {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-center",
                "onclick": null,

                "showMethod": "show",
                "hideMethod": "fadeOut",
                "timeOut": 0,
                "extendedTimeOut": 0
            }
            toastr.error("@ViewData["MSGErr"]", 'Error');
            
        }

        </script>
    }

</body>
</html >
