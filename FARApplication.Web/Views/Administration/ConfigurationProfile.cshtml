@model ConfigurationProfileViewModel
@{
    var SessionUSer = ViewBag.SessionUser;
}
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = null;
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<!DOCTYPE html>
<html>
<head>
    <title>FAR Requst</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <form asp-controller="FAR" asp-action="Index" method="post">
        <div style="background-color: black" class="container-fluid">
            <asp-for></asp-for>
            <button class="close-btn" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" type="button"><i class="fa fa-close"></i> Close</button>
            <button class="save-btn" type="submit" name="command" value="Save"><i class="fa fa-save"></i> Save</button>
            <button class="save-close-btn" type="submit"><i class="fa fa-save"></i> Save & Close</button>
            <button class="submit-button" type="submit" name="command" value="Submit"><i class="fa fa-paper-plane" aria-hidden="true"></i> Update Unique No</button>
        </div>

        <partial name="_HeaderPartial" />


        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5"></div>
                <div class="col-lg-5">
                    <p style="white-space: nowrap ;text-align: right;" id="warning"><span id="red-text">Note:</span> Fields marked with <span id="red-text">*</span> are mandatory</p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div style="background-color: grey;height:25px;" class="col-lg-10">
                    <p><b>General Information</b></p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="Email-Principal-Name" for="Email-Principal-Name">Email Principal Name:</label>
                </div>
                <div class="col-lg-5">
                    <input class="input-box" type="text" asp-for="EmailPrincipalName"  id="Email-Principal-Name" />
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="FirstApproverName" for="FirstApproverName">Approver 1 Name:</label>
                </div>
                <div class="col-lg-5">
                    <select style="width:50%" name="FirstApproverName" id="FirstApproverName"></select>
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="SecondApproverName" for="SecondApproverName">Approver 2 Name:</label>
                </div>
                <div class="col-lg-5">
                    <select style="width:50%" name="SecondApproverName" id="SecondApproverName"></select>
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="approved-FAR-email" for="approved-FAR-email">PMO Team members to receive approved FAR email:</label>
                </div>
                <div class="col-lg-5">
                    @*<select style="width:34%" name="approved-FAR-email" asp-for="Model.PMOTeamRcvApprovedMail"  asp-items="PMOTeamRcvApprovedMail" id="approved-FAR-email"></select>*@
                    <textarea type="text" style="margin-top: 3px; width: 50%;" asp-for="PMOTeamRcvApprovedMail" id="Details"  required></textarea>

                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div style="background-color: grey;height:25px;margin-top: 10px;" class="col-lg-10">
                    <p><b>Document Update History</b></p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-2">
                    <label for="CreatedByConfig">Created By:</label>
                </div>
                <div class="col-lg-3">
                    <input class="input-box" type="text" id="CreatedByConfig" />
                </div>
                <div class="col-lg-2">
                    <label for="CreatedOnConfig">Created On:</label>
                </div>
                <div class="col-lg-3">
                    <input class="input-box" type="date" id="CreatedOnConfig" />
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-2">
                    <label for="LastModifiedByConfig">Last Modified By:</label>
                </div>
                <div class="col-lg-3">
                    <input class="input-box" type="text" id="LastModifiedByConfig" />
                </div>
                <div class="col-lg-2">
                    <label for="LastModifiedOnConfig">Last Modified On:</label>
                </div>
                <div class="col-lg-3">
                    <input class="input-box" type="date" id="LastModifiedOnConfig" />
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div>@ViewBag.SuccessResult</div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>