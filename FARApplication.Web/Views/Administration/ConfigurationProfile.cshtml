@model ConfigurationProfileViewModel

@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = null;
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<!DOCTYPE html>
<html>
<head>
    <title>Configuration Profile</title>
    <link href="~/asset/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/asset/toastr/css/toastr.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/asset/toastr/js/toastr.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <form asp-controller="Administration" asp-action="ConfigurationProfile" method="post">
        <div style="background-color: black" class="container-fluid">

            <button class="close-btn" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" type="button"><i class="fa fa-close"></i> Close</button>
            <button class="save-btn" type="submit" name="Mode" value="Save"><i class="fa fa-save"></i> Save</button>
            <button class="save-close-btn" type="submit" name="Mode" value="SaveClose"><i class="fa fa-save"></i> Save & Close</button>
        </div>

        <partial name="_HeaderPartial" />


        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5"></div>
                <div class="col-lg-5">
                    <p style="white-space: nowrap ;text-align: right;" id="warning"><span id="red-text">Note:</span> Fields marked with <span id="red-text">*</span> are mandatory</p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div style="background-color: grey;height:25px;" class="col-lg-10">
                    <p><b>General Information</b></p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="Email-Principal-Name" for="Email-Principal-Name">Email Principal Name:</label>
                </div>
                <div class="col-lg-5">
                    <input class="input-box" type="text" asp-for="EmailPrincipalName" id="Email-Principal-Name" readonly />
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="FirstApproverName" for="FirstApproverName">Approver 1 Name:</label>
                </div>
                <div class="col-lg-5">
                    <select style="width:50%" asp-for="Approver1Id" asp-items="Model.ddlApprover1" id="ddlapprover1"></select>

                    <input id="hdnApprover1Id" type="hidden" asp-for="PrevApprover1Id" />
                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="SecondApproverName" for="SecondApproverName">Approver 2 Name:</label>
                </div>
                <div class="col-lg-5">
                    <select style="width:50%" asp-for="Approver2Id" asp-items="Model.ddlApprover1" id="ddlapprover2"></select>
                    <input id="hdnApprover2Id" type="hidden" asp-for="PrevApprover2Id" />

                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-5">
                    <label id="approved-FAR-email" for="approved-FAR-email">PMO Team members to receive approved FAR email:</label>
                </div>
                <div class="col-lg-5">
                    @*<select style="width:34%" name="approved-FAR-email" asp-for="Model.PMOTeamRcvApprovedMail"  asp-items="PMOTeamRcvApprovedMail" id="approved-FAR-email"></select>*@
                    <textarea type="text" style="margin-top: 3px; width: 50%;" asp-for="PMOTeamRcvApprovedMail" id="Details" readonly></textarea>

                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-1"></div>
                <div style="background-color: grey;height:25px;margin-top: 10px;" class="col-lg-10">
                    <p><b>Document Update History</b></p>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-2">
                    <label>Created By:</label>
                </div>
                <div class="col-lg-3">
                    @Html.DisplayFor(x => x.CreatedBy)
                    <input type="hidden" asp-for="CreatedBy" />

                </div>
                <div class="col-lg-2">
                    <label>Created On:</label>
                </div>
                <div class="col-lg-3">

                    @Html.DisplayFor(x => x.CreatedOn)
                    <input type="hidden" asp-for="CreatedOn" />


                </div>
                <div class="col-lg-1"></div>
            </div>
            <div style="margin-top: 4px;" class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-2">
                    <label>Last Modified By:</label>
                </div>
                <div class="col-lg-3">

                    @Html.DisplayFor(x => x.LastModifiedBy)
                    <input type="hidden" asp-for="LastModifiedBy" />
                </div>
                <div class="col-lg-2">
                    <label>Last Modified On:</label>
                </div>
                <div class="col-lg-3">

                    @Html.DisplayFor(x => x.LastModifiedOn)
                    <input type="hidden" asp-for="LastModifiedOn" />
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>
        <div>@ViewBag.SuccessResult</div>
    </form>

    <script src="~/asset/bootstrap/js/bootstrap.bundle.min.js"></script>

    @*<script src="~/asset/sidebar/js/sidebars.js"></script>*@





    @if (ViewBag.SuccessMessage != null)
    {
        <script type="text/javascript">

        window.onload = function () {

                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "positionClass": "toast-top-center",
                    "onclick": null,

                    "showMethod": "show",
                    "hideMethod": "fadeOut",
                    "timeOut": 0,
                    "extendedTimeOut": 0
                }
                toastr.success("@ViewBag.SuccessMessage", 'Success');

        }
        </script>
    }

    @if (ViewBag.FailureMessage != null)
    {
        <script type="text/javascript">

        window.onload = function () {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-center",
                "onclick": null,

                "showMethod": "show",
                "hideMethod": "fadeOut",
                "timeOut": 0,
                "extendedTimeOut": 0
            }
            toastr.error("@ViewBag.FailureMessage", 'Error');

        }

        </script>
    }
</body>
</html>